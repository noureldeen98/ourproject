@model IEnumerable<OnlineLibrary.Models.UsersTable>

@{
    ViewBag.Title = "Index";
}

<h1 class="glyphicon glyphicon-user">Users </h1>

<p>
    @*<span class="glyphicon glyphicon-plus">  </span>
        @Html.ActionLink("Create New", "Create", "Admin", null, new { @class = "btn btn-primary" })*@
    <a href="@Url.Action("Create","Admin")" class="btn btn-primary">
        <span class="glyphicon glyphicon-heart"></span>
        New User
    </a>

</p>

<p>
    @using (Html.BeginForm("SearchUser", "Admin", FormMethod.Get))
    {
        <b>Search:</b>
        @Html.TextBox("key")
        <input type="submit" value="search" class="btn btn-primary" />
    }
</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |*@

                <a href="@Url.Action("Edit","Admin",new { id=item.Id}) " class="btn btn-success ">
                    <span class="glyphicon glyphicon-arrow-up"></span>
                    Edit
                </a> |

                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                <a href="@Url.Action("Details","Admin",new { id=item.Id}) " class="btn btn-toolbar ">
                    <span class="glyphicon glyphicon-baby-formula"></span>
                    Details
                </a>


                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })*@
                <a href="@Url.Action("Delete","Admin",new { id=item.Id}) " class="btn btn-danger ">
                    <span class="glyphicon glyphicon-arrow-down"></span>
                    Delete
                </a>
            </td>
        </tr>
    }


</table>

<p>

    @Html.ActionLink("Back to home", "Index", "Home", null, new { @class = "btn btn-info" })
</p>


